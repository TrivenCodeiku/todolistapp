<%- include('header'); -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box" id="heading">
  <h2><%= date %></h2>
</div>

<div class="box">
  <% newListItems.forEach(function(newItem){%>
  <div class="item">
    <input type="checkbox" />
    <p><%= newItem.itemName %></p>
  </div>

  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item !"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include('footer'); -%>
